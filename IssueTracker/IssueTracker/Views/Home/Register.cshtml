@using IssueTracker.Models
@model Person

@{
    ViewBag.Title = "Register";
}

<h3>Register here!</h3>
<br/>

@using (@Html.BeginForm())
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @style = "margin:7px" })
            @if (ViewBag.NotValidName != null)
            {
                <p style="margin:7px;color:crimson"> @ViewBag.NotValidName </p>
            }
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Email", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "margin:7px" })
            @if (ViewBag.NotValidEmail != null)
            {
                <p style="margin:7px;color:crimson"> @ViewBag.NotValidEmail </p>
            }
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Password", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "margin:7px" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConPassword, "Confirm Password", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConPassword, new { @class = "form-control", @style = "margin:7px" })
            @if (ViewBag.NotMatch != null)
            {
                <p style="margin:7px;color:crimson"> @ViewBag.NotMatch </p>
            }
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="REGISTER!" class="btn btn-default" />
    </div>

}
