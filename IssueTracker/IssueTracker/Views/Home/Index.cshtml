@using IssueTracker.Models
@model Person
@{
    ViewBag.Title = "Home Page";
}

<table height="700">
    <tr>
        <td width="55%">
            <div class="jumbotron">
                <h1>Issue Tracker</h1>
                <p class="lead">Issue Tracker is web application for managing your projects, issues and errors with our employees. <br /> Do you wanna get things done? </p>
                <p><a href="~/Home/Register" class="btn btn-primary btn-lg">REGISTER HERE &raquo;</a></p>
            </div>
        </td>
        <td style="padding-left:60px">
            <h1> Login: </h1>
            <br />
            @using (@Html.BeginForm())
            {
                <h4>Name</h4>
                @Html.TextBox("Name")
                if (ViewBag.NameError != null)
                {
                    <p style="margin:7px;color:crimson"> @ViewBag.NameError </p>
                }
                <h4>Password</h4>
                @Html.PasswordFor(m => m.Password)
                if (ViewBag.PassError != null)
                {
                    <p style="margin:7px;color:crimson"> @ViewBag.PassError </p>
                }
                <p class="jumbotron" style="background-color:white">
                    <input class="btn btn-primary btn-lg" type="submit" value="Proceed @System.Web.HttpUtility.HtmlDecode("&raquo;")" />
                </p>
            }
        </td>
    </tr>
</table>
